datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model Role {
    id   Int    @id @default(autoincrement())
    name String
    users User[]
}

model User {
    id       Int      @id @default(autoincrement())
    email    String   @unique
    name     String?
    password String?
    roleId   Int
    role     Role     @relation(fields: [roleId], references: [id])
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    deletedAt DateTime?
}
